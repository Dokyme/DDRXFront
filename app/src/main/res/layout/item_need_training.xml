<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_need_training"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_need_training_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_need_training"
            android:text="唐诗三百首"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/last_training_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_need_training_name"
            android:layout_toRightOf="@id/image_need_training"
            android:text="上次：" />

        <TextView
            android:id="@+id/text_last_training_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_need_training_name"
            android:layout_toRightOf="@id/last_training_date"
            android:text="2018-05-14" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

