<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_register_text_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="用户名"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/input_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_reigster_edit_lmargin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_register_text_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="密码"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/input_register_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_reigster_edit_lmargin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_register_text_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="确认密码"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/input_register_confirmpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_reigster_edit_lmargin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/layout_register_text_width"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="昵称"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/input_register_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_reigster_edit_lmargin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_register_confirm"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认" />

        <Button
            android:id="@+id/btn_register_back"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回" />
    </LinearLayout>
</LinearLayout>